{
  "name": "icon-library",
  "version": "1.4.0",
  "description": "Fender Icon Library",
  "main": "dist/icon-library.css",
  "scripts": {
    "start": "npm run build:css && npm run build:minify && npm run copy",
    "build:css": "tachyons src/style.css > dist/icon-library.css",
    "build:minify": "tachyons src/style.css -m > dist/icon-library.min.css",
    "copy": "copyfiles -u 1 src/fonts/* dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fenderdigital/icon-library.git"
  },
  "author": "Fender Digital",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fenderdigital/icon-library/issues"
  },
  "homepage": "https://github.com/fenderdigital/icon-library#readme",
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "tachyons-cli": "^1.0.10"
  }
}
